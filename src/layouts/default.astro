		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Exome</title>
	</head>
	<body>
		<div class="wrapper">
			<div class="container">
				<Sidebar />

				<main class="content">
					<slot />
