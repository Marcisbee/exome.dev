<style>
	.wrapper {
		margin: 0 20px;
	}

	.container {
		margin-left: auto;
		margin-right: auto;
		max-width: 64rem;
		width: 100%;
	}

	.content {
		padding-bottom: 6rem;
		padding-top: 3rem;
